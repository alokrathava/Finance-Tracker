<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spendit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpendIT">
        <activity android:name=".dashboard.EditExpense"></activity>
        <activity android:name=".dashboard.DetailExpense" />
        <activity android:name=".dashboard.EditBudget" />
        <activity android:name=".dashboard.EditCategory" />
        <activity android:name=".dashboard.Expense" />
        <activity android:name=".dashboard.Budget" />
        <activity android:name=".dashboard.Category" />
        <activity android:name=".auth.Register" />
        <activity android:name=".dashboard.MainActivity" />
        <activity android:name=".SplashScreen" />
        <activity android:name=".auth.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>